{
  "hosting": {
    "public": "build",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "**",
        "destination": "/index.html"
      },
      {
        "source": "/getallusers",
        "function": "getAllUsers"
      },
      {
        "source": "/hellodude",
        "function": "helloDude"
      },
      {
        "source": "/helloworld{,/**}",
        "function": "helloWorld"
      }
    ]
  }
}
